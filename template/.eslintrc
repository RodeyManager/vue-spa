{
	"env": {
		"browser": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
		"semi": [2, "always"],
		"quotes": [1, "single"],
		"indent": [4, 4],

		"array-bracket-newline": [
			"error",
			{
				"minItems": 4
			}
		],
		"array-bracket-spacing": [
			"error",
			{
				"singleValue": true,
				"objectsInArrays": true,
				"arraysInArrays": true
			}
		]
	}
}
